<% if signed_in? %>
<h4><strong>Add a review:</strong></h4>
<%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
    <%= f.label :body, "Comments" %><br>
    <%= f.text_area :body %>
  </p>
 
  <p>
    Rating: <span class="rating"></span>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
  <% end %>
<% end %>