<!DOCTYPE html>
<html>
  <head>
    <title>First Project</title>
    <%= csrf_meta_tags %>

    <!-- Link to Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Link to Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <!-- Allow mobile phones to act responsively -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <!-- Creat Nav Bar -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <!-- Create Search Bar -->
          <%= form_tag("/products", method: "get", class: "navbar-form navbar-left") do %>
            <div class="form-group"> 
              <%= text_field_tag :q, nil, placeholder: "Search", class: "form-control" %>
              <%= submit_tag("Search", class: "btn btn-default") %>
            </div><!-- /.form-group -->
          <% end %>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#first-project-navbar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right" id="first-project-navbar">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if current_page?(root_path) %>"><a href="<%= root_path %>">Home<span class="sr-only">(current)</span></a></li>
            <li class="<%= 'active' if current_page?(static_pages_about_path) %>"><%= link_to "About", static_pages_about_path %></li>
            <li class="<%= 'active' if current_page?(static_pages_contact_path) %>"><%= link_to "Contact", static_pages_contact_path %></li>
            <li class="<%= 'active' if current_page?(products_path) %>"><%= link_to "Products", products_path %></li>
            <li class="<%= 'active' if current_page?(new_user_session_path) %>">
              <% if user_signed_in? %>
                <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              <% else %>
                <%= link_to('Login', new_user_session_path) %>
              <% end %>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <!-- Add required Devise flash notices for authentication -->
    <% if notice %>
      <div class="notice alert alert-warning" role="alert"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-warning" role="alert"><%= alert %></div>
    <% end %>

    <%= yield %>
    
    <!-- Creat Footer -->
    <footer>
      &copy; 2016 Pens Berlin
    </footer>
  </body>
</html>






















