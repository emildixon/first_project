<div class="container">
  <h1>Contact Us</h1>

  <!-- Create Contact Form -->
  <%= flash[:notice] %>

  <%= form_tag("/static_pages/thank_you") do %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil,class: "form-control", placeholder: "Enter Message" %>
      </div>
    </div><!-- /.col -->

    <div class="col-md-4">
      <!-- Display Contact Information -->
      <div class="body-content contact-info">
        <p>Contact Us:</p>
        <p>Location: Berlin</p>
        <p>Phone: 555-555-5555</p>
        <p>Email: info@website.com</p>
      </div><!-- /.body-content -->
    </div><!-- /.col -->
  </div><!-- /.row -->
  
  <%= submit_tag "Send" %>
  <% end %>
  
</div>